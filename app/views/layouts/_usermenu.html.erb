<div class="usermenu">
    <div class="picandname">
        <% if current_user.image.attached? %>
            <%= image_tag(current_user.image, size: "40x40") %>
        <% else %>
            <%= image_tag('default_pic.png', size: "40x40") %>
        <% end %>
        <% if current_user.username %>
            <%= current_user.username %>
        <% else %>
            Username
        <% end %>
    </div>
    <%= link_to "MODIFICA", edit_user_registration_path, class:"button" %>
    <%= button_to "LOGOUT",  destroy_session_path(:user), :method => :delete, class:"button" %>
</div>