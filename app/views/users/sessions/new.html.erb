<div class="index">
  <div class="index_login">
    <h2 class="page_title">ACCEDI</h2>
    <br/>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="fields">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "fieldarea" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "fieldarea" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="rememberme">
          <%= f.check_box :remember_me%>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <br/>
      <div class="actions session_buttons">
        <%= f.submit "LOG IN", class:"button" %>
      </div>
    <% end %>

    <br/>

    <%= render "users/shared/links" %>
  </div>

</div>