<div class="index-dashboard">
    <div class="big-sezione">
        <div class="sezione">
            <div class="titolo_sezione">
                <span class="titolo_sezione">DA REVISIONARE</span>
                <hr class="titolo_sezione">
                <div class="elenco_sezione">
                    <div class="voce_es">
                        <div class="titolo_ves">Megan</div>
                        <div class="scadenza_ves">
                            <%= link_to image_tag('upload.png', size: "20x20"), root_path %>
                            <%= link_to image_tag('download.png', size: "20x20"), root_path %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br/>
        <div class="sezione">
            <div class="titolo_sezione">
                <span class="titolo_sezione">REVISIONATE</span><hr class="titolo_sezione"><div class="elenco_sezione">
                <% Translation.where(revisore_id: current_user.id).order(created_at: :desc).each do |traduzione| %>
                    <div class="voce_es">
                        <div class="titolo_ves"><%= traduzione.titolo %>
                            <% if traduzione.tipo=="serie" %>   
                                <% if traduzione.stagione.to_i < 10 %> (S0<% else %> (S<% end %><%= traduzione.stagione%><% if traduzione.episodio.to_i < 10 %>E0<% else %>E<% end %><%= traduzione.episodio%>)
                            <% end %>
                        </div>
                        <div class="rating_ves">
                            <% if traduzione.tipo=="serie" %>   
                                <%= link_to image_tag('pencil.png', size: "20x20"), edit_translation_path(traduzione.id, params: {:film => false}) %>
                            <% else %>
                                <%= link_to image_tag('pencil.png', size: "20x20"), edit_translation_path(traduzione.id, params: {:film => true}) %>
                            <% end %>
                            <%= link_to image_tag('download.png', size: "20x20"), traduzione.tradotto.url %> 
                        </div>
                    </div>
                <% end %>
                </div>
            </div>
        </div>
    </div>
</div>